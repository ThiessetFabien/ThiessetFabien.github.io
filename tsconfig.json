{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "app/",
    "paths": {
      "@components/*": ["components/*"],
      "@forms/*": ["components/forms/*"],
      "@ui/*": ["components/ui/*"],
      "@layout/*": ["components/layout/*"],
      "@features/*": ["features/*"],
      "@config/*": ["config/*"],
      "@fonts/*": ["fonts/*"],
      "@lib/*": ["lib/*"],
      "@types/*": ["types/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@schemas/*": ["schemas/*"],
      "@services/*": ["services/*"],
      "@api/*": ["api/*"],
      "@middleware/*": ["middleware/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/pages/page.tsx"
  ],
  "exclude": ["node_modules"]
}
