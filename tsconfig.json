{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "/",
    "paths": {
      "@components/*": ["app/components/*"],
      "@forms/*": ["app/components/forms/*"],
      "@ui/*": ["app/components/ui/*"],
      "@layout/*": ["app/components/layout/*"],
      "@features/*": ["app/features/*"],
      "@types/*": ["app/types/*"],
      "@styles/*": ["app/styles/*"],
      "@utils/*": ["app/utils/*"],
      "@hooks/*": ["app/hooks/*"],
      "@schemas/*": ["app/schemas/*"],
      "@api/*": ["app/api/*"],
      "@middleware/*": ["app/middleware/*"],
      "@src/*": ["src/*"],
      "@services/*": ["src/services/*"],
      "@fonts/*": ["src/fonts/*"],
      "@config/*": ["src/config/*"],
      "@lib/*": ["src/lib/*"],
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/pages/page.tsx"
  ],
  "exclude": ["node_modules"]
}
